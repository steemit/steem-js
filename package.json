{
  "name": "steem",
  "version": "0.3.31",
  "description": "Steem.js the JavaScript API for Steem blockchain",
  "main": "index.js",
  "scripts": {
    "test": "mocha -t 20000 --require babel-polyfill --require babel-register",
    "build": "npm run build-browser && npm run build-node",
    "build-browser": "rm -rf dist && NODE_ENV=production webpack && gzip -k -f ./dist/*.js && du -h ./dist/*",
    "build-node": "mkdir -p ./lib && cp ./src/* ./lib/ && babel ./src --out-dir ./lib"
  },
  "browser": {
    "ws": false
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/adcpm/steem.git"
  },
  "keywords": [
    "steem",
    "steemit",
    "blockchain",
    "steemjs"
  ],
  "author": "Bonustrack <fabien@bonustrack.co> (https://github.com/adcpm)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/adcpm/steem/issues"
  },
  "homepage": "https://github.com/adcpm/steem#readme",
  "dependencies": {
    "bluebird": "^3.4.6",
    "debug": "^2.2.0",
    "detect-node": "^2.0.3",
    "lodash": "^4.16.4",
    "steemauth": "0.0.19",
    "ws": "^1.1.1"
  },
  "devDependencies": {
    "babel-cli": "^6.16.0",
    "babel-loader": "^6.2.5",
    "babel-polyfill": "^6.16.0",
    "babel-preset-es2015": "^6.16.0",
    "babel-preset-es2017": "^6.16.0",
    "babel-register": "^6.14.0",
    "bluebird": "^3.4.6",
    "eslint": "^3.5.0",
    "eslint-config-airbnb": "^11.1.0",
    "eslint-plugin-import": "^1.15.0",
    "eslint-plugin-jsx-a11y": "^2.2.2",
    "eslint-plugin-react": "^6.2.1",
    "json-loader": "^0.5.4",
    "mocha": "^3.0.2",
    "mocha-make-stub": "^2.3.2",
    "should": "^11.1.0",
    "webpack": "^1.13.2",
    "webpack-visualizer-plugin": "^0.1.5"
  },
  "contributors": [

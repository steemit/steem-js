{
  "name": "steem-js",
  "version": "0.8.0",
  "description": "JavaScript library for the Steem blockchain",
  "main": "lib/index.js",
  "scripts": {
    "build": "npm run build-browser && npm run build-node",
    "build-browser": "cross-env NODE_ENV=production rimraf dist && webpack",
    "build-node": "babel src --out-dir lib",
    "prepare": "npm run build",
    "test": "mocha --require @babel/register test/*.js",
    "test-auth": "npm test -- --grep 'steem.auth'",
    "lint": "eslint src",
    "prepublish": "npm run build"
  },
  "browser": {
    "ws": false,
    "crypto": false
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/steemit/steem-js.git"
  },
  "keywords": [
    "steem",
    "steemit",
    "blockchain",
    "steemjs"
  ],
  "author": "Fabien (https://github.com/bonustrack)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/steemit/steem-js/issues"
  },
  "homepage": "https://github.com/steemit/steem-js#readme",
  "dependencies": {
    "assert": "^2.1.0",
    "babel-polyfill": "^6.26.0",
    "bigi": "^1.4.2",
    "bluebird": "^3.7.2",
    "browserify-aes": "^1.2.0",
    "bs58": "^5.0.0",
    "bytebuffer": "^5.0.1",
    "create-hash": "^1.2.0",
    "create-hmac": "^1.1.7",
    "cross-fetch": "^3.1.5",
    "detect-node": "^2.1.0",
    "ecurve": "^1.0.6",
    "https-browserify": "^1.0.0",
    "is-hex": "^1.1.3",
    "isomorphic-ws": "^5.0.0",
    "lodash": "^4.17.21",
    "noble-secp256k1": "^1.2.14",
    "os-browserify": "^0.3.0",
    "path-browserify": "^1.0.1",
    "randombytes": "^2.1.0",
    "retry": "^0.13.1",
    "ripemd160": "^2.0.2",
    "safe-buffer": "^5.2.1",
    "secp256k1": "^4.0.3",
    "secure-random": "^1.1.2",
    "should": "^13.2.3",
    "stream-browserify": "^3.0.0",
    "stream-http": "^3.2.0",
    "util": "^0.12.5",
    "ws": "^8.18.1"
  },
  "devDependencies": {
    "@babel/cli": "^7.17.10",
    "@babel/core": "^7.18.2",
    "@babel/preset-env": "^7.18.2",
    "@babel/register": "^7.22.15",
    "ajv": "^8.17.1",
    "ajv-keywords": "^5.1.0",
    "babel-loader": "^10.0.0",
    "buffer": "^6.0.3",
    "core-js": "^3.36.0",
    "cross-env": "^7.0.3",
    "crypto-browserify": "^3.12.1",
    "eslint": "^8.16.0",
    "mocha": "^11.1.0",
    "process": "^0.11.10",
    "rimraf": "^5.0.5",
    "webpack": "^5.99.7",
    "webpack-cli": "^6.0.1",
    "webpack-visualizer-plugin": "^0.1.11"
  },
  "resolutions": {
    "json5": "^1.0.2",
    "@babel/traverse": "^7.22.15"
  },
  "overrides": {
    "json5": "^1.0.2",
    "@babel/traverse": "^7.22.15"
  },
